{# Variable Twig contenant le nom de la route actuelle (servira pour le menu du site) #}
{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html lang="fr" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {# Affichage du titre de la page venant de la vue via le block "title", suivi du nom du site, collé à côté #}
    <title>{% block title %}{% endblock %} - {{ site_name }}</title>
    {# Inclusion de Font-Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    {# Inclusion CSS Bootstrap #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {# Inclusion Styles perso #}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {# Block pour permettre aux pages de rajouter individuellement des fichiers CSS additionnels #}
    {% block css %}{% endblock %}
</head>
<body>

    {# Inclusion du menu principal du site #}
    {% include 'partials/_main_navbar.html.twig' %}

    {# Inclusion de l'affichage des messages flashes de type "success" et "error" #}
    {% include 'partials/_flashes.html.twig' %}

    {# Bloc pour afficher le contenu des pages #}
    {% block body %}{% endblock %}

    {# Inclusion JS Bootstrap #}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    {# Block pour permettre aux pages de rajouter individuellement des fichiers JS additionnels #}
    {% block js %}{% endblock %}
</body>
</html>